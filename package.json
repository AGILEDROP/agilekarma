  "engines": {
    "node": "10.8.0",
    "yarn": "1.9.4"
  },
  "keywords": [
    "slack",
    "bot",
    "karma",
    "heroku"
  ],
  "jest": {
    "testMatch": [
      "**/tests/**/*.js"
    ],
    "testURL": "http://localhost/"
  },
  "dependencies": {
    "@slack/client": "^4.3.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "pg": "^7.4.3"
  },
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-config-tdmalone": "^0.0.1",
    "eslint-plugin-jest": "^21.18.0",
    "jest": "^23.4.2",
    "yarn": "^1.9.4"
  }
}
