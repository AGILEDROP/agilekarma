  "description": "Like plusplus.chat, but one that actually works, because you can host it yourself ðŸ˜‰",
  "main": "index.js",
  "repository": "git@github.com:tdmalone/working-plusplus.git",
  "author": "Tim Malone <tdmalone@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "DEBUG=eslint:cli-engine eslint --color --ignore-pattern '/coverage/' --ignore-pattern '/docs/' --ignore-pattern '!.eslintrc.js' \"**/*.js\"",
