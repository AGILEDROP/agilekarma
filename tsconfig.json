{
  "compilerOptions": {
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "paths": {
      "@types": ["src/types.d.ts", "node"]
    }
  },
  "files": ["index.ts"],
  "include": ["src/**/*.ts", "src/events.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
