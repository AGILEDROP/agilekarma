{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "./",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "lib": ["es2017"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "paths": {
      "@types": ["src/types.d.ts"]
    },
    "outDir": "./dist"
  },
  "files": ["index.ts"],
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
